class Solution:
    def searchMatrix(self, matrix: List[List[int]], target: int) -> bool:
        row = len(matrix)
        coln = len(matrix[0])
        l = 0
        r = row*coln-1

        while l<=r:
            mid = (l+r)//2
            i = mid//coln
            j = mid%coln
            if matrix[i][j] == target:
                return True
            elif matrix[i][j] > target:
                r = mid-1
            else:
                l = mid+1
        return False
