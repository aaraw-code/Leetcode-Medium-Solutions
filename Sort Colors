# Implement sort colors with the help of Counting Sort

class Solution:
    def sortColors(self, nums: List[int]) -> None:
        """
        Do not return anything, modify nums in-place instead.
        """
        n = len(nums)
        mx = max(nums)
        freq = [0]*(mx+1)

        for i in nums:
            freq[i]+=1

        idx = 0
        for i in range(0,mx+1):
            while freq[i]>0:
                nums[idx] = i
                idx+=1
                freq[i]-=1


# Implement sort colors using Two Pointers
class Solution:
    def sortColors(self, nums: List[int]) -> None:
        """
        Do not return anything, modify nums in-place instead.
        """
        left = 0
        right = len(nums)-1
        i = 0

        while i<=right:
            if nums[i] == 1:
                i+=1
            elif nums[i] == 0:
                temp = nums[i]
                nums[i] = nums[left]
                nums[left] = temp
                i+=1
                left+=1
            else:
                temp = nums[i]
                nums[i] = nums[right]
                nums[right] = temp
                right-=1
