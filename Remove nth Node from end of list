class Solution:
    def removeNthFromEnd(self, head: Optional[ListNode], n: int) -> Optional[ListNode]:
        
        p1 = head
        p2 = head

        for i in range(n):
            p2 = p2.next

        if p2 == None:    # it means n is equal to length of list so p1 at head so we remove p1
            head = head.next
            return head

        while p2.next != None:
            p2 = p2.next
            p1 = p1.next
        p1.next = p1.next.next
        return head
